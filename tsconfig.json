{
  "exclude": [
    "packages/**/tests/**",
    "packages/**/dist/**",
    "packages/**/build/**"
  ],
  "references": [
    {
      "path": "./packages/spa"
    },
    {
      "path": "./packages/ui"
    }
  ],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "packages/types",
    "outDir": "packages/types",
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "packages/spa/src/*"
      ],
      "@ui/*": [
        "packages/ui/src/*"
      ]
    }
  }
}