{
  "name": "movie-browser-next",
  "version": "1.0.0",
  "description": "yarn workspaces next app",
  "main": "index.ts",
  "repository": "https://github.com/MCesarczyk/movie-browser-next",
  "author": "MCesarczyk",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "scripts": {
    "spa": "yarn workspace spa dev",
    "ui": "yarn workspace ui dev",
    "dev": "concurrently --kill-others-on-fail \"yarn spa\" \"yarn ui\"",
    "storybook": "concurrently --kill-others-on-fail \"yarn workspace spa storybook\" \"yarn workspace ui storybook\""
  }
}